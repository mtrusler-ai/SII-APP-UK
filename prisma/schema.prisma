generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Idea {
  id        String   @id @default(cuid())
  title     String
  summary   String?
  createdAt DateTime @default(now())
}

model User {
  id    String @id @default(cuid())
  email String @unique
}
